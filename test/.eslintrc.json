{
  "root": true,
  "env": {
    "mocha": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "commonjs"
  },
  "extends": [
    "eslint:recommended",
    "plugin:mocha/recommended",
    "plugin:import/recommended",
    "plugin:promise/recommended"
  ],
  "plugins": ["mocha", "import", "promise"],
  "rules": {
    "mocha/max-top-level-suites": "off"
  }
}
